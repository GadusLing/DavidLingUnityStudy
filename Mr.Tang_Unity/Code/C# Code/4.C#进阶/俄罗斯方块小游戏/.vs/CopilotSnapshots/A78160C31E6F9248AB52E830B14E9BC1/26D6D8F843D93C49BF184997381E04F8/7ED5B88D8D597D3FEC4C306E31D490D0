using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using 俄罗斯方块.Main.UI;

namespace 俄罗斯方块.Main
{
    /// <summary>
    /// 开始场景类 - 实现ISceneUpdate接口
    /// </summary>
    internal class S_StartScene : S_AbstractBaseScene
    {
        protected override void InitializeUI()
        {
            // 添加标题
            AddUIElement(new TitleElement("俄罗斯方块"));
            
            // 添加间距 - 标题和按钮之间的空白
            AddSpacer(2); // 2行间距
            
            // 添加按钮
            AddUIElement(new ButtonElement("开始游戏", () => Game.ChangeScene(E_SceneType.Game)));
            AddSpacer(); // 1行间距
            AddUIElement(new ButtonElement("制作者名单", () => Game.ChangeScene(E_SceneType.Credits)));
            AddSpacer(); // 1行间距
            AddUIElement(new ButtonElement("退出游戏", () => Environment.Exit(0)));
        }
    }
}
