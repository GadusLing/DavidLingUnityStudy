using System;

namespace 贪吃蛇.Main.UI
{
    /// <summary>
    /// 标题UI元素
    /// </summary>
    public class TitleElement : IUIElement
    {
        private string _title;
        
        public TitleElement(string title)
        {
            _title = title;
        }

        public void Render(int centerX, int startY, bool isSelected)
        {
            Console.ForegroundColor = ConsoleColor.White;
            Console.SetCursorPosition(centerX - GetDisplayWidth(_title) / 2, startY);
            Console.WriteLine(_title);
        }

        public int GetHeight() => 1;

        private int GetDisplayWidth(string text)
        {
            int width = 0;
            foreach (char c in text)
            {
                if (c >= 0x4E00 && c <= 0x9FFF)
                    width += 2;
                else
                    width += 1;
            }
            return width;
        }
    }
}